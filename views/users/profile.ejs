<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Main Page</title>
    <link href="https://fonts.googleapis.com/css?family=Solway:800&display=swap" rel="stylesheet">
</head>

<body>
    <nav class="navbar">
        <% if (user) { %>
        <ul class="right">
            <li>
                <% if (user) { %>
                <a href="/logout">Log Out</a>
                <% } else { %>
                <a href="/auth/google">Login with Google</a>
                <% } %>
            </li>
            <li>
                <a href="/users/<%=user.id%>/messages">Reminders</a>
            </li>
            <li>
                <a href="/users/<%=user.id%>">Profile</a>
            </li>
            <li>
                <a href="/users/<%=user.id%>/cities">Goals</a>
            </li>
        </ul>
    </nav>

    <h1 class="name"><%= user.name %></h1>
    <div class="profile">
    <% if (user._id.equals(user && user._id)) { %>
    <% } %>
    <h3>I feel like:</h3>
    <div class="status">
            <form action="/users/<%= user.id %>" method="POST">
                <input type="text" name="status" class="white-text">
                <button>How are you feeling?</button>
            </form>
        </div>
    <div class="userstatus">
        <% user.status.forEach(function(s) { %>
       <h3><%= s %></h3></form>
        <%  }) %>
    </div>
    <h2>Today's goal is:</h2>
    <% user.city.forEach(function(c) { %>

    <h3><%= c.city %></h3>
    <% }) %>
    <h3>Update today's goal!</h3>
    <div>
        <form action="/users/<%=user.id%>/cities?_method=PUT" method="POST">
            <input type="text" name="updatedCity"><button>Update</button>
        </form>
    </div>
    </div>

    <% } else { %>
    <a href="/auth/google">Login with Google</a>
    <% } %>
</body>

</html>